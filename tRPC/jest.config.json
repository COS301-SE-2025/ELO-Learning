{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/application/elo-learning"],
  "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": [
    "application/elo-learning/services/**/*.ts",
    "application/elo-learning/routes/**/*.ts",
    "!application/elo-learning/**/*.d.ts",
    "!application/elo-learning/**/index.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/application/elo-learning/$1"
  },
  "testTimeout": 10000
}
